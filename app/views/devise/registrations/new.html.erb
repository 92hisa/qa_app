<!-- Page content -->
<div class="container d-flex flex-column">
  <div class="row align-items-center justify-content-center no-gutters min-vh-100">
    <div class="col-lg-5 col-md-8 py-8 py-xl-0">
      <!-- Card -->
      <div class="card shadow ">
        <!-- Card body -->
        <div class="card-body p-6">
          <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mb-4">
            <h1 class="mb-1 font-weight-bold text-center" style="color: #00DB83;">新規登録</h1>
          </div>
          <!-- Form -->
          <form>
            <div class="form-group">
              <span class="badge badge-light-danger text-danger mr-2">必須</span><%= f.label "ユーザー名", class: "form-label"%>
              <%= f.text_field :name, id: "fname", class: "form-control", placeholder: "50文字以内" %>
            </div>
              <!-- メールアドレス -->
            <div class="form-group">
              <span class="badge badge-light-danger text-danger mr-2">必須</span><%= f.label "メールアドレス", class: "form-label"%>
              <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
            </div>
            <div>
              <span class="badge badge-light-danger text-danger mr-2">必須</span><%= f.label "性別", class: "form-label"%>
              <div class="btn-group btn-group-toggle d-flex mb-3" data-toggle="buttons">
                <label class="btn btn-light flex-fill mr-2 active">
                  <%= f.radio_button :gender, :man, class: "form-check-input" %>
                  <label class="form-check-label">男性</label>
                </label>
                <label class="btn btn-light flex-fill">
                  <%= f.radio_button :gender, :woman, class: "form-check-input" %>
                  <label class="form-check-label">女性</label>
                </label>
              </div>
            </div>
            <div class="form-group d-flex flex-column">
              <div><span class="badge badge-light-danger text-danger mr-2">必須</span><%= f.label "生年月日", class: "form-label"%></div>
              <div><%= raw sprintf(f.date_select(:birth_date, with_css_classes:'year month day', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日' %></div>
            </div>
              <!-- Password -->
            <div class="form-group">
            <span class="badge badge-light-danger text-danger mr-2">必須</span><%= f.label "パスワード", class: "form-label"%>
              <%= f.password_field :password, autocomplete: "password", class: "form-control", placeholder: "6文字以上" %>
            </div>
            <div class="form-group">
            <span class="badge badge-light-danger text-danger mr-2">必須</span><%= f.label "パスワードの確認", class: "form-label"%>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
            </div>
              <!-- Checkbox -->
            <div class="form-group text-center">
              <span style="font-size: 13px"><a href="#!", style="color: #00DB83;">利用規約</a>と<a href="#!", style="color: #00DB83;">プライバシーポリシー</a>をご覧ください</span>
            </div>
            <div>
              <!-- Button -->
              <%= f.submit "上記同意のうえ無料会員登録する", class: "btn btn-success btn-block", style: "font-weight: bold;" %>
            </div>
            <div class="mt-3 text-center">
              <span>アカウントをお持ちの方はこちら「<%= link_to "ログイン", new_user_session_path,data: {"turbolinks" => false}, style: "color: #00DB83;"%> 」</span>
            </div>
          </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

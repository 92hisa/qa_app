<!-- Page content -->
<div class="container d-flex flex-column">
  <div class="row align-items-center justify-content-center no-gutters min-vh-100">
    <div class="col-lg-5 col-md-8 py-8 py-xl-0">
      <!-- Card -->
      <div class="card shadow ">
        <!-- Card body -->
        <div class="card-body p-6">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="mb-4">
            <h1 class="mb-1 font-weight-bold text-center" style="color: #00DB83;">パスワード再設定メール</h1>
          </div>
          <!-- Form -->
          <form>
              <!-- メールアドレス -->
            <div class="form-group">
              <%= f.label "パスワード再設定のご案内をお送りいたします", class: "form-label"%>
              <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
            </div>
            <div>
              <!-- Button -->
              <%= f.submit "送信する", class: "btn btn-success btn-block", style: "font-weight: bold;" %>
            </div>
            <div class="mt-3 text-center">
              <span>アカウントをお持ちの方はこちら「<%= link_to "ログイン", new_user_session_path,data: {"turbolinks" => false}, style: "color: #00DB83;"%> 」</span>
            </div>
          </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% visitor = notification.visitor %>
<% visited = notification.visited %>
<li class="list-group-item bg-transparent py-4">
  <div class="row align-items-center">
    <div class="col">
      <div class="d-flex align-items-center">
        <%= link_to user_path(visitor),data: {"turbolinks" => false} do %>
          <% if visitor.profile_image.present? %>
            <%=  image_tag visitor.profile_image.url, class:"avatar-md rounded-circle" %>
          <% else %>
            <%= image_tag 'profile_default_img_128', class:"avatar-md rounded-circle" %>
          <% end %>
        <% end %>
        <div class="ml-3">
          <p class="mb-0"><%== notification_form(notification) %></p>
          <i class="far fa-clock mr-1"></i><span><%= " (#{time_ago_in_words(notification.created_at)}å‰)" %></span>
        </div>
      </div>
    </div>
  </div>
</li>

<!-- Bg -->
<div class="py-20" style="background-color: #C9FCC9; no-repeat;background-position: center;"></div>
<!-- User info -->
<div class="card p-lg-2 pt-2 pt-lg-0 rounded-0 border-0">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8 col-md-8 col-12">
        <div class="d-flex align-items-center">
          <div class="position-relative mt-n9">
            <% if @user.profile_image.present? %>
              <%= image_tag @user.profile_image.url, class: "rounded-circle avatar-xxl border-white border-width-4 position-relative" %>
            <% else %>
              <%= image_tag "profile_default_img_128.png", class: "rounded-circle avatar-xxl border-white border-width-4 position-relative" %>
            <% end %>
          </div>
          <div class="ml-3">
            <div class="d-flex align-items-center">
              <h3 class="mb-0 font-weight-bold mr-2"><%= @user.name %></h3>
              <% if @user.id == current_user.id %>
              <span class="badge badge-light-primary text-primary"><%= "ID: #{@user.id}" %></span>
              <% end %>
            </div>
            <% if @user.id == current_user.id %>
            <li class="list-unstyled"><i class="fa fa-envelope nav-icon mr-2"></i><%= @user.email %></li>
            <li class="list-unstyled"><i class="far fa-calendar-alt nav-icon mr-2"></i><%= @user.birth_date %></li>
            <% end %>
            <% if @user.gender == "man" %>
              <li class="list-unstyled"><i class="fa fa-user nav-icon mr-2"></i>男性</li>
            <% else %>
              <li class="list-unstyled"><i class="fa fa-user nav-icon mr-2"></i>女性</li>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-12">
        <div class="font-size-md mt-4 mt-lg-0 pb-2 pb-lg-0 d-flex justify-content-center text-nowrap">
          <%= link_to "登録情報を変更", edit_user_registration_path,data: {"turbolinks" => false}, class: "btn btn-success mr-2" %>
        </div>
      </div>
    </div>
  </div>
</div>

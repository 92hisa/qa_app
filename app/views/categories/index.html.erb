<div class="p-lg-5 py-5">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 col-lg-9 col-md-12 col-12 mb-5 mt-4">
        <div class="border-bottom pb-2 mb-4 d-lg-flex justify-content-between align-items-center">
          <div>
            <h1 class="mb-0 h2">カテゴリー</h1>
          </div>
        </div>
        <div class="card border-0">
          <div class="card-header" style=" background-color: #DCF0F9;">
            <h4 class="mb-0">
              <%= @kaden.name %><span class="text-muted font-size-xs"><%= "(#{Post.where(category_id: @kaden.id).count})"%></span>
            </h4>
          </div>
          <div class="row">
            <% @kaden.children.each do |children_category| %>
            <div class="col-md-2 col-3 text-center">
              <div class="p-xl-3 p-lg-3 mb-3 mb-lg-0">
                <%= children_category.name %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
